{
  "name": "support-chat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "intl": "^1.2.5",
    "lodash": "^4.17.10",
    "mongodb": "^2.2.35",
    "node-sass-chokidar": "^1.3.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-icons": "^2.2.7",
    "react-intl": "^2.4.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "sinon": "^6.1.3",
    "socket.io": "^2.1.0",
    "uuid": "^3.2.1"
  },
  "scripts": {
    "precommit": "pretty-quick --staged",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start": "concurrently 'npm run react' 'npm run server' 'npm run watch-css'",
    "react": "react-scripts start",
    "server": "nodemon server/index.js",
    "build-js": "react-scripts build",
    "build": "concurrently 'npm run build-js' 'npm run build-css'",
    "test": "react-scripts test --env=jsdom",
    "prettier": "prettier --single-quote --write \"{src,server}/**/*.{js,jsx,scss}\"",
    "eject": "react-scripts eject",
    "test-server": "jest --config server/jest.config.jss"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "husky": "^0.14.3",
    "nodemon": "^1.17.4",
    "prettier": "1.13.7",
    "pretty-quick": "^1.6.0",
    "react-test-renderer": "^16.4.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!server/*.{js,jsx}",
      "!src/**/*.styles.{js,jsx}",
      "!src/*.{js,jsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text",
      "html"
    ]
  }
}
